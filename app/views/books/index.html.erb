<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1>閱讀書單</h1>
      <%= link_to "增加書籍", new_book_path, :class => "btn btn-default pull-right" %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <table class = "table">
        <thead>
          <tr>
            <th class = "text-center">No.</th>
            <th class = "text-center">書名</th>
            <th class = "text-center">分類</th>
            <th class = "text-center">作者</th>
            <th class = "text-center">說明</th>
            <th class = "text-center">閱讀進度</th>
            <th class = "text-center">加入日期</th>
            <th class = "text-center"> </th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book|  %>
          <tr>
            <td></td>
            <td><%= book.name %></td>
            <td class = "text-center"><%= book.Category %></td>
            <td><%= book.author %></td>
            <td><%= book.description_short %></td>
            <td class = "text-center"><%= book.progress %></td>
            <td><%= book.created_at %></td>

            <td><%= link_to "show", book_path(book), :class => "btn btn-default" %></td>
            <td><%= link_to "edit", edit_book_path(book), :class => "btn btn-default" %></td>
            <td><%= link_to "delete", book_path(book), :method => :delete, :class => "btn btn-danger" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>