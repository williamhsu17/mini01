<h1>閱讀書單</h1>

<%= link_to "增加書籍", new_book_path %>
<table>
  <tr>
    <th>No.</th>
    <th>書名</th>
    <th>分類</th>
    <th>作者</th>
    <th>說明</th>
    <th>閱讀進度</th>
    <th>加入日期</th>
    <th></th>
  </tr>
  <% @books.each do |book|  %>
  <tr>
    <td></td>
    <td><%= book.name %></td>
    <td><%= book.Category %></td>
    <td><%= book.author %></td>
    <td><%= book.description_short %></td>
    <td><%= book.progress %></td>
    <td><%= book.created_at %></td>

    <td><%= link_to "show", book_path(book) %></td>
    <td><%= link_to "edit", edit_book_path(book) %></td>
    <td><%= link_to "delete", book_path(book), :method => :delete %></td>
  </tr>
  <% end %>
</table>