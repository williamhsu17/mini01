<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1><%= @title %>的資料</h1>
    </div>
    <div class="col-md-6">
      <h4>書名：</h4>
      <p><%= @book.name %></p>
    </div>
    <div class="col-md-6">
      <h4>作者：</h4>
      <p><%= @book.author %></p>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
          <h4>內容簡介：</h4>
          <p><%= simple_format(@book.description) %></p>
    </div>
    <%= link_to "Back", books_path, :class => "btn btn-primary pull-right" %>
  </div>
</div>